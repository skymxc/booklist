
.container {
  height: 100%;
}

/* 头部 名字及作者 */

.container-author {
  display: flex;
  flex-direction: row;
  padding-left: 20rpx;
  height: 120rpx;
  width: 100%;
}

.vertical-line {
  background-color: #090;
  width: 10rpx;
  height: 100%;
}

.container-author-text {
  flex: 1;
  /* height: 90%; */
  display: flex;
  flex-direction: column;
  /* padding: 10rpx; */
  margin-left: 10rpx;
}

.text-booklist-name {
  font-size: 40rpx;
  color: black;
  display: block;
  margin-bottom: 10rpx;
  font-style: 微软雅黑;
  font-weight: bold;
  overflow: hidden;
}

.text-author-name {
  color: #bcbcbc;
  /* font-size: 30rpx; */
}

/* 描述 */

.container-description {
  color: #868686;
  font-size: 30rpx;
  width: 100%;
  display: block;
  padding-left: 20px;
}

/* 列表 */

.scroll-book ,.contianer-empty{
  width: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

@import "../../style/book.wxss";

/* 操作按钮 */

.container-tool {
  height: 100rpx;
  width: 100%;
  display: flex;
  flex-direction: row;

}

/* empty */

.container-empty {
  justify-content: center;
  align-items: center;
}
.button-tool{
  flex: 1;
  color: white;
   border-radius: 0px;
}
.button-tool::after{
  border: none !important;

}
.button-share{
  background-color: green;
}
.button-index{
  background-color: rosybrown;
}