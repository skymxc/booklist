/* miniprogram/pages/booklist/booklist.wxss */

.container{

}
.container-empty {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: white;
}

.container-empty-list {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.image-empty {
  width: 300rpx;
  height: 300rpx;
}

.text-empty {
  color: #bcbcbc;
  font-size: 30rpx;
}

.button-create-booklist {
  width: 80%;
  margin-top: 20rpx;

}

/* 书列表 */

.container-booklist {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 100rpx;
}

/* 底部创建按钮 */

.container-create {
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  height: 100rpx;
  border-top: 1rpx #bcbcbc solid;
  background-color: #f8f8f8;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

/*  书 卡片 */

.container-book {
  -moz-box-shadow: 0px 0px 5px #333;
  -webkit-box-shadow: 0px 0px 5px #333;
  box-shadow: 0px 0px 5px #333;
  background-color: white;
  width: 90%;
  margin: 10rpx;
  max-height: 150rpx;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  
}

.text-book-name {
  color: black;
  font-weight: bold;
  font-size: 35rpx;
  display: block;
  line-height: 35rpx;
  margin-bottom: 10rpx;
   text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.text-book-description {
  color: #bcbcbc;
  font-size: 30rpx;
  flex: 1;
  display: block;
  text-overflow: ellipsis;
  overflow: hidden;
}
