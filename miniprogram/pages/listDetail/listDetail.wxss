/* miniprogram/pages/listDetail/listDetail.wxss */

.container{

  background-color: white;
}
.container-empty {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: white;
 padding-top: 100rpx;
}

.container-empty-list {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.image-empty {
  width: 300rpx;
  height: 300rpx;
}

.text-empty {
  color: #bcbcbc;
  font-size: 30rpx;
}

.button-add-book {
  width: 80%;
  margin-top: 20rpx;

}

/* 书列表 */


.container-books {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 100rpx;
}

@import "../../style/book.wxss";
/* 底部按钮 */
.container-controller{
  height: 100rpx;
  width: 100%;
  position: fixed;
  bottom: 0rpx;
  display: flex;
  flex-direction: row;
}

.button-controller{
  flex: 1;
  height: 100%;
   border-radius: 0px;
   color: white;
}
.button-controller::after{
  border: none;
}

.button-share{
  background-color: green;
  
}

.button-edit{
  background-color: firebrick;
}
.button-add{
  background-color: burlywood;
}
/* 选择 */
.container-select{
  position: fixed;
  bottom: 0rpx;
  height: 100%;
  width: 100%;
}

.select-cover{
  height: 100%;
  width: 100%;
  position: relative;
  background-color: rgba(0, 0, 0, 0.5);
}

.container-select-list{
  position: absolute;
  bottom: 0rpx;
  width: 100%;
  height: 300rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
  
}
.select{
  border-bottom: 1rpx #bcbcbc solid;
  width: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
  text-align: center;
  justify-content: center;
}
